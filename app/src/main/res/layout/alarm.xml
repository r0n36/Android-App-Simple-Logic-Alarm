<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/simpleStop"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:background="@android:color/background_dark">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopAlarm"
            android:id="@+id/btnStopAlarm"
            android:layout_gravity="center"
            android:layout_marginTop="250sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/midStop"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopAlarm"
            android:id="@+id/hiBtnStopAlarm"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/hiStop"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/solveMath"
            android:id="@+id/solveMath"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="185dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="111"
                android:id="@+id/hiEquation" />

        </LinearLayout>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/enterRes"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopAlarm"
            android:id="@+id/midBtnStopAlarm"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>